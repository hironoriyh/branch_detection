<!-- Run object detection publisher using parameterfile -->
<launch>

 <arg name="sim"             default="false" />
  <arg name="camera"          default="sr300" />

  <group unless="$(arg sim)">
	  <include file="$(find realsense_camera)/launch/sr300_nodelet_rgbd.launch">
	    <arg name="camera"        value="$(arg camera)"/>
	    <arg name="publish_tf"    value="true"/>
	  </include>
  </group>


  <node pkg="object_detection" type="surface_reconstruction_service" name="surface_reconstruction_service" output="screen">
    <rosparam command="load" file="$(find object_detection)/params/surface_reconstruction.yaml"/>
  </node>

</launch>
